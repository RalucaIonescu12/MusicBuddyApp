                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#638CEB"
                    android:layout_gravity="center_horizontal"
                    android:layout_below="@id/progressCalculatedTimeSignatureTitle"
                    android:text="Max: " />

                <TextView
                    android:id="@+id/progressValueMinTimeSignature"
