<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#638CEB"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="20dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:height="50dp"
        android:padding="2dp"
        android:fontFamily="@font/be_vietnam_light"
        android:textColor="@android:color/white"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:id="@+id/detailsLayout"
        android:layout_width="350dp"
        android:layout_marginTop="60dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#638CEB"
        android:visibility="gone">

        <androidx.cardview.widget.CardView
            android:layout_width="320dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true"
            android:layout_marginLeft="13dp"
            android:layout_height="wrap_content">

            <RelativeLayout
            android:layout_width="match_parent"
                android:padding="10dp"
            android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/progressDanceabilityDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"

                    android:textColor="@android:color/white"
                    android:layout_gravity="center_horizontal"
                    android:text="Danceability describes how suitable a track is for dancing based on a combination of musical elements including tempo, rhythm stability, beat strength, and overall regularity."
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:id="@+id/progressDanceabilityTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="#638CEB"
                    android:layout_below="@id/progressDanceabilityDesc"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:text="Danceability: "/>
                <TextView
                    android:id="@+id/progressValueDanceability"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="#638CEB"
                    android:layout_gravity="center_horizontal"
                    android:text="0"
                    android:layout_below="@id/progressDanceabilityDesc"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="200dp"/>
                <SeekBar
                    android:id="@+id/seekBarDanceability"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/progressValueDanceability"
                    android:max="100"
                    android:progress="0" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_height="wrap_content"
            android:layout_width="320dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="20dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="10dp">
            <RelativeLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        <TextView
            android:id="@+id/progressInstrumentalnessDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Predicts whether a track contains no vocals. 'Ooh' and 'aah' sounds are treated as instrumental in this context. Rap or spoken word tracks are clearly 'vocal'. The higher the less vocals. "
        />
        <TextView
            android:id="@+id/progressInstrumentalnessTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#638CEB"
            android:layout_below="@id/progressInstrumentalnessDesc"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Instrumentalness: " />
        <TextView
            android:id="@+id/progressValueInstrumentalness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/progressInstrumentalnessDesc"
            android:textColor="#638CEB"
            android:layout_gravity="center_horizontal"
            android:text="0" />

        <SeekBar
            android:id="@+id/seekBarInstrumentalness"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/progressInstrumentalnessTitle"
            android:max="100"
            android:progress="0" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_height="wrap_content"
            android:layout_width="320dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true"
            android:layout_marginLeft="13dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/progressTempoDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:text="The overall estimated tempo of a track in beats per minute (BPM). In musical terminology, tempo is the speed or pace of a given piece and derives directly from the average beat duration. " />

                <TextView
                    android:id="@+id/progressTempoTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="#638CEB"
                    android:layout_gravity="center_horizontal"
                    android:layout_below="@id/progressTempoDesc"
                    android:layout_marginTop="10dp"
                    android:text="Tempo: " />
                <TextView
                    android:id="@+id/progressValueTempo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="#638CEB"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/progressTempoDesc"
                    android:layout_gravity="center_horizontal"
                    android:text="0" />

                <SeekBar
                    android:id="@+id/seekBarTempo"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="50dp"
                    android:max="100"
                    android:layout_below="@id/progressTempoTitle"
                    android:progress="0" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="320dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="10dp"
            android:layout_marginLeft="13dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_height="wrap_content">
        <TextView
            android:id="@+id/progressLivenessDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:padding="10dp"
            android:textColor="@android:color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Detects the presence of an audience in the recording. Higher liveness values represent an increased probability that the track was performed live. A value above 0.8 provides strong likelihood that the track is live." />

        <TextView
            android:id="@+id/progressLivenessTitle"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#638CEB"
            android:layout_gravity="center_horizontal"
            android:layout_below="@id/progressLivenessDesc"
            android:text="Liveness: " />
        <TextView
            android:id="@+id/progressValueLiveness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="200dp"
            android:textColor="#638CEB"
            android:layout_below="@id/progressLivenessDesc"
            android:layout_gravity="center_horizontal"
            android:text="0" />

        <SeekBar
            android:id="@+id/seekBarLiveness"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:max="100"
            android:layout_below="@id/progressLivenessTitle"
            android:progress="0" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="320dp"
            app:cardCornerRadius="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="13dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_height="wrap_content">
        <TextView
            android:id="@+id/progressValenceDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:padding="10dp"
            android:textColor="@android:color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="A measure from 0.0 to 1.0 describing the musical positiveness conveyed by a track. Tracks with high valence sound more positive (e.g. happy, cheerful, euphoric), while tracks with low valence sound more negative (e.g. sad, depressed, angry)." />

        <TextView
            android:id="@+id/progressValenceTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#638CEB"
            android:layout_gravity="center_horizontal"
            android:layout_below="@id/progressValenceDesc"
            android:layout_marginTop="10dp"
            android:text="Valence: " />
        <TextView
            android:id="@+id/progressValueValence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="200dp"
            android:textColor="#638CEB"
            android:layout_below="@id/progressValenceDesc"
            android:layout_gravity="center_horizontal"
            android:text="0" />

        <SeekBar
            android:id="@+id/seekBarValence"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:max="100"
            android:layout_marginTop="10dp"
            android:layout_below="@id/progressValenceTitle"
            android:progress="0" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.cardview.widget.CardView>