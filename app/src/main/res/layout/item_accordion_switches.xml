                    android:id="@+id/progressTempoDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/progressTempoName"
                    android:text="The overall estimated tempo of a track in beats per minute (BPM). In musical terminology, tempo is the speed or pace of a given piece and derives directly from the average beat duration. " />

                <TextView
                    android:id="@+id/progressMinTempoTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#638CEB"
                    android:layout_gravity="center_horizontal"
                    android:layout_below="@id/progressTempoDesc"
                    android:layout_marginTop="10dp"
                    android:text="Min : " />
                <TextView
                    android:id="@+id/progressCalculatedTempoTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#638CEB"
                    android:layout_gravity="center_horizontal"
                    android:layout_below="@id/progressMinTempoTitle"
                    android:layout_marginTop="10dp"
                    android:text="Calculated target : " />
                <TextView
                    android:id="@+id/progressMaxTempoTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#638CEB"
                    android:layout_gravity="center_horizontal"
                    android:layout_below="@id/progressCalculatedTempoTitle"
                    android:layout_marginTop="10dp"
                    android:text="Max: " />
                <TextView
                    android:id="@+id/progressValueMinTempo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#638CEB"
                    android:layout_marginLeft="170dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/progressTempoDesc"
                    android:layout_gravity="center_horizontal"
                    android:text="0" />
                <TextView
                    android:id="@+id/progressValuecalculatedTempo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#638CEB"
                    android:layout_marginLeft="170dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/progressMinTempoTitle"
                    android:layout_gravity="center_horizontal"
                    android:text="0" />
                <TextView
                    android:id="@+id/progressValueMaxTempo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#638CEB"
                    android:layout_marginLeft="170dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/progressCalculatedTempoTitle"
                    android:layout_gravity="center_horizontal"
                    android:text="0" />
                <SeekBar
                    android:id="@+id/seekBarMinTempo"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="50dp"
                    android:max="20000000"
                    android:layout_below="@id/progressValueMaxTempo"
                    android:progress="0" />
                <SeekBar
                    android:id="@+id/seekBarMaxTempo"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="50dp"
                    android:max="20000000"
                    android:layout_below="@id/seekBarMinTempo"
                    android:progress="0" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="340dp"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="10dp"
            android:layout_marginLeft="13dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true"
            android:layout_height="wrap_content">
            <RelativeLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/progressLivenessName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="Liveness
" />

                <TextView
                    android:id="@+id/progressLivenessDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/progressLivenessName"
                    android:text="Detects the presence of an audience in the recording. Higher liveness values represent an increased probability that the track was performed live. A value above 0.8 provides strong likelihood that the track is live." />

                <TextView
                    android:id="@+id/progressMinLivenessTitle"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#638CEB"
                    android:layout_gravity="center_horizontal"
                    android:layout_below="@id/progressLivenessDesc"
                    android:text="Min: " />
                <TextView
                    android:id="@+id/progressCalculatedLivenessTitle"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#638CEB"
                    android:layout_gravity="center_horizontal"
                    android:layout_below="@id/progressMinLivenessTitle"
                    android:text="Calculated target: " />
                <TextView
                    android:id="@+id/progressMaxLivenessTitle"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#638CEB"
                    android:layout_gravity="center_horizontal"
                    android:layout_below="@id/progressCalculatedLivenessTitle"
                    android:text="Max: " />

                <TextView
                    android:id="@+id/progressValueMinLiveness"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="200dp"
                    android:textColor="#638CEB"
                    android:layout_below="@id/progressLivenessDesc"
                    android:layout_gravity="center_horizontal"
                    android:text="0" />
                <TextView
                    android:id="@+id/progressValueCalculatedLiveness"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="200dp"
                    android:textColor="#638CEB"
                    android:layout_below="@id/progressMinLivenessTitle"
                    android:layout_gravity="center_horizontal"
                    android:text="0" />
                <TextView
                    android:id="@+id/progressValueMaxLiveness"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="200dp"
                    android:textColor="#638CEB"
                    android:layout_below="@id/progressCalculatedLivenessTitle"
                    android:layout_gravity="center_horizontal"
                    android:text="0" />

                <SeekBar
                    android:id="@+id/seekBarMinLiveness"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:max="100000"
                    android:layout_below="@id/progressValueMaxLiveness"
                    android:progress="0" />
                <SeekBar
                    android:id="@+id/seekBarMaxLiveness"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:max="100000"
                    android:layout_below="@id/seekBarMinLiveness"
                    android:progress="0" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="340dp"
            app:cardCornerRadius="10dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="13dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/progressValenceName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"

                    android:textColor="@android:color/white"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="Valence" />

                <TextView
            android:id="@+id/progressValenceDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_below="@+id/progressValenceName"
            android:textColor="@android:color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="A measure from 0.0 to 1.0 describing the musical positiveness conveyed by a track. Tracks with high valence sound more positive (e.g. happy, cheerful, euphoric), while tracks with low valence sound more negative (e.g. sad, depressed, angry)." />

        <TextView
            android:id="@+id/progressMinValenceTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#638CEB"
            android:layout_gravity="center_horizontal"
            android:layout_below="@id/progressValenceDesc"
            android:layout_marginTop="10dp"
            android:text="Min: " />

        <TextView
            android:id="@+id/progressCalculatedValenceTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#638CEB"
            android:layout_gravity="center_horizontal"
            android:layout_below="@id/progressMinValenceTitle"
            android:layout_marginTop="10dp"
            android:text="Calculated target: " />
        <TextView
            android:id="@+id/progressMaxValenceTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#638CEB"
            android:layout_gravity="center_horizontal"
            android:layout_below="@id/progressCalculatedValenceTitle"
            android:layout_marginTop="10dp"
            android:text="Max: " />
        <TextView
            android:id="@+id/progressValueMinValence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="200dp"
            android:textColor="#638CEB"
            android:layout_below="@id/progressValenceDesc"
            android:layout_gravity="center_horizontal"
            android:text="0" />
                <TextView
                    android:id="@+id/progressValueCalculatedValence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="200dp"
                    android:textColor="#638CEB"
                    android:layout_below="@id/progressMinValenceTitle"
                    android:layout_gravity="center_horizontal"
                    android:text="0" />
        <TextView
            android:id="@+id/progressValueMaxValence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="200dp"
            android:textColor="#638CEB"
            android:layout_below="@id/progressCalculatedValenceTitle"
            android:layout_gravity="center_horizontal"
            android:text="0" />
        <SeekBar
            android:id="@+id/seekBarMinValence"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:max="100000"
            android:layout_marginTop="10dp"
            android:layout_below="@id/progressValueMaxValence"
            android:progress="0" />
        <SeekBar
            android:id="@+id/seekBarMaxValence"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:max="100000"
            android:layout_marginTop="10dp"
            android:layout_below="@id/seekBarMinValence"
            android:progress="0" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="340dp"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="10dp"
            android:layout_marginLeft="13dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/progressEnergyName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="Energy" />

                <TextView
                    android:id="@+id/progressEnergyDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_below="@+id/progressEnergyName"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="Energy is a measure from 0.0 to 1.0 and represents a perceptual measure of intensity and activity. Typically, energetic tracks feel fast, loud, and noisy. For example, death metal has high energy, while a Bach prelude scores low on the scale. Perceptual features contributing to this attribute include dynamic range, perceived loudness, timbre, onset rate, and general entropy." />

                <TextView
                    android:id="@+id/progressMinEnergyTitle"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#638CEB"
                    android:layout_gravity="center_horizontal"
                    android:layout_below="@id/progressEnergyDesc"
                    android:text="Min: " />
                <TextView
                    android:id="@+id/progressCalculatedEnergyTitle"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#638CEB"
                    android:layout_gravity="center_horizontal"
                    android:layout_below="@id/progressMinEnergyTitle"
                    android:text="Calculated target: " />
                <TextView
                    android:id="@+id/progressMaxEnergyTitle"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#638CEB"
                    android:layout_gravity="center_horizontal"
                    android:layout_below="@id/progressCalculatedEnergyTitle"
                    android:text="Max: " />
                <TextView
                    android:id="@+id/progressValueMinEnergy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="200dp"
                    android:textColor="#638CEB"
                    android:layout_below="@id/progressEnergyDesc"
                    android:layout_gravity="center_horizontal"
                    android:text="0" />
                <TextView
                    android:id="@+id/progressValueCalculatedEnergy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="200dp"
                    android:textColor="#638CEB"
                    android:layout_below="@id/progressMinEnergyTitle"
                    android:layout_gravity="center_horizontal"
                    android:text="0" />
                <TextView
                    android:id="@+id/progressValueMaxEnergy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="200dp"
                    android:textColor="#638CEB"
                    android:layout_below="@id/progressCalculatedEnergyTitle"
                    android:layout_gravity="center_horizontal"
                    android:text="0" />

                <SeekBar
                    android:id="@+id/seekBarMinEnergy"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:max="100000"
                    android:layout_below="@id/progressValueMaxEnergy"
                    android:progress="0" />
                <SeekBar
                    android:id="@+id/seekBarMaxEnergy"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:max="100000"
                    android:layout_below="@id/seekBarMinEnergy"
                    android:progress="0" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="340dp"
            android:layout_marginTop="15dp"
