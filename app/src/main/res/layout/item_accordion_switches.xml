<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#638CEB"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="20dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:height="50dp"
        android:padding="2dp"
        android:fontFamily="@font/be_vietnam_light"
        android:textColor="@android:color/white"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:id="@+id/detailsLayout"
        android:layout_width="400dp"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#638CEB"
        android:visibility="visible">
        <androidx.cardview.widget.CardView
            android:layout_width="340dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="10dp"
            android:layout_marginLeft="13dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/progressNbrSongsDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="How many tracks?" />

                <TextView
                    android:id="@+id/progressNbrSongsTitle"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#638CEB"
                    android:layout_gravity="center_horizontal"
                    android:layout_below="@id/progressNbrSongsDesc"
                    android:text="Number of tracks: " />
                <TextView
                    android:id="@+id/progressNbrSongsSignature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="200dp"
                    android:textColor="#638CEB"
                    android:layout_below="@id/progressNbrSongsDesc"
                    android:layout_gravity="center_horizontal"
                    android:text="0" />

                <SeekBar
                    android:id="@+id/seekNbrSongsSignature"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:max="100"
                    android:layout_below="@id/progressNbrSongsTitle"
                    android:progress="0" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="340dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true"
            android:layout_marginLeft="13dp"
            android:layout_height="wrap_content">

            <RelativeLayout
            android:layout_width="match_parent"
                android:padding="10dp"
            android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/progressDanceabilityName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="#638CEB"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:text="Danceability: "/>
                <TextView
                    android:id="@+id/progressDanceabilityDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_below="@id/progressDanceabilityName"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center_horizontal"
                    android:text="Danceability describes how suitable a track is for dancing based on a combination of musical elements including tempo, rhythm stability, beat strength, and overall regularity."
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:id="@+id/progressMinDanceabilityTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="#638CEB"
                    android:layout_below="@id/progressDanceabilityDesc"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:text="Min: "/>
                <TextView
                    android:id="@+id/progressCalculatedDanceabilityTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="#638CEB"
                    android:layout_below="@id/progressMinDanceabilityTitle"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:text="Calculated target: "/>
                <TextView
                    android:id="@+id/progressMaxDanceabilityTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="#638CEB"
                    android:layout_below="@id/progressCalculatedDanceabilityTitle"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:text="Max: "/>
                <TextView
                    android:id="@+id/progressValueMinDanceability"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#638CEB"
                    android:layout_gravity="center_horizontal"
                    android:text="0"
                    android:layout_below="@id/progressDanceabilityDesc"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="200dp"/>
                <TextView
                    android:id="@+id/progressValueCalculatedDanceability"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#638CEB"
                    android:layout_gravity="center_horizontal"
                    android:text="0"
                    android:layout_below="@id/progressMinDanceabilityTitle"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="200dp"/>
                <TextView
                    android:id="@+id/progressValueMaxDanceability"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#638CEB"
                    android:layout_gravity="center_horizontal"
                    android:text="0"
                    android:layout_below="@id/progressCalculatedDanceabilityTitle"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="200dp"/>
                <SeekBar
                    android:id="@+id/seekBarMinDanceability"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/progressValueMaxDanceability"
                    android:max="100000"
                    android:progress="0" />
                <SeekBar
                    android:id="@+id/seekBarMaxDanceability"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/seekBarMinDanceability"
                    android:max="100000"
                    android:progress="0" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_height="wrap_content"
            android:layout_width="340dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="15dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="10dp">
            <RelativeLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/progressInstrumentalName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="#638CEB"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:text="Instrumentalness: "/>
        <TextView
            android:id="@+id/progressInstrumentalnessDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/progressInstrumentalName"
            android:text="Predicts whether a track contains no vocals. 'Ooh' and 'aah' sounds are treated as instrumental in this context. Rap or spoken word tracks are clearly 'vocal'. The higher the less vocals. "
        />
        <TextView
            android:id="@+id/progressMinInstrumentalnessTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#638CEB"
            android:layout_below="@id/progressInstrumentalnessDesc"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Min: " />
            <TextView
                android:id="@+id/progressCalculatedInstrumentalnessTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#638CEB"
                android:layout_below="@id/progressMinInstrumentalnessTitle"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Calculated target: " />
        <TextView
            android:id="@+id/progressMaxInstrumentalnessTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#638CEB"
            android:layout_below="@id/progressCalculatedInstrumentalnessTitle"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Max: " />
        <TextView
            android:id="@+id/progressValueMinInstrumentalness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginLeft="225dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/progressInstrumentalnessDesc"
            android:textColor="#638CEB"
            android:layout_gravity="center_horizontal"
            android:text="0" />
            <TextView
                android:id="@+id/progressValueCalculatedInstrumentalness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginLeft="225dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/progressMinInstrumentalnessTitle"
                android:textColor="#638CEB"
                android:layout_gravity="center_horizontal"
                android:text="0" />
        <TextView
            android:id="@+id/progressValueMaxInstrumentalness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginLeft="225dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/progressCalculatedInstrumentalnessTitle"
            android:textColor="#638CEB"
            android:layout_gravity="center_horizontal"
            android:text="0" />

            <SeekBar
        android:id="@+id/seekBarMinInstrumentalness"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/progressValueMaxInstrumentalness"
        android:max="100000"
        android:progress="0" />

        <SeekBar
            android:id="@+id/seekBarMaxInstrumentalness"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/seekBarMinInstrumentalness"
            android:max="100000"
            android:progress="0" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_height="wrap_content"
            android:layout_width="340dp"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true"
            android:layout_marginLeft="13dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="10dp"
