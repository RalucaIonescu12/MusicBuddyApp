                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="200dp"
                    android:textColor="#638CEB"
                    android:layout_below="@id/progressTimeSignatureDesc"
                    android:layout_gravity="center_horizontal"
                    android:text="0" />
                <TextView
                    android:id="@+id/progressValueCalculatedTimeSignature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="200dp"
                    android:textColor="#638CEB"
                    android:layout_below="@id/progressMinTimeSignatureTitle"
                    android:layout_gravity="center_horizontal"
                    android:text="0" />
                <TextView
                    android:id="@+id/progressValueMaxTimeSignature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="200dp"
                    android:textColor="#638CEB"
                    android:layout_below="@id/progressCalculatedTimeSignatureTitle"
                    android:layout_gravity="center_horizontal"
                    android:text="0" />

                <SeekBar
                    android:id="@+id/seekBarMinTimeSignature"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:max="4"
                    android:layout_below="@id/progressValueMaxTimeSignature"
                    android:progress="0" />
                <SeekBar
                    android:id="@+id/seekBarMaxTimeSignature"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:max="4"
                    android:layout_below="@id/seekBarMinTimeSignature"
                    android:progress="0" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</androidx.cardview.widget.CardView>