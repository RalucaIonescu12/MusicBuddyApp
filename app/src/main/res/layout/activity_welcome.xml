<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#858382"
    tools:context=".ACTIVITIES.LOGIN.WelcomeActivity">

  <Button
      android:id="@+id/login_spotify"
      android:layout_width="254dp"
      android:layout_height="67dp"
      android:background="#C69774"
      android:text="Let's begin"
      android:textColor="#FFFFFF"
      android:textSize="80px"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/ill_use" />

  <TextView
      android:id="@+id/do_you_know"
      android:layout_width="320dp"
      android:layout_height="120dp"
      android:layout_marginTop="88dp"
      android:fontFamily="@font/be_vietnam_light"
      android:textAlignment="center"
      android:textColor="#FFFFFF"
      android:textSize="70px"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.593"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/hello" />

  <TextView
      android:fontFamily="@font/be_vietnam_light"
      android:id="@+id/hello"
      android:layout_width="154dp"
      android:layout_height="86dp"
      android:layout_marginTop="48dp"
      android:textAlignment="center"
      android:textColor="#FFFFFF"
      android:textSize="140px"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/ill_use"
      android:layout_width="339dp"
      android:layout_height="105dp"
      android:layout_marginTop="72dp"
      android:fontFamily="@font/be_vietnam_light"
      android:textAlignment="center"
      android:textColor="#FFFFFF"
      android:textSize="70px"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/do_you_know" />

</androidx.constraintlayout.widget.ConstraintLayout>