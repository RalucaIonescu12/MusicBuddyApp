<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#858382"
    tools:context=".WelcomeActivity">

  <Button
      android:id="@+id/login_spotify"
      android:layout_width="254dp"
      android:layout_height="67dp"
      android:background="#C69774"
      android:text="Let's begin"
      android:textColor="#FFFFFF"
      android:textSize="80px"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView3" />

  <TextView
      android:fontFamily="@font/be_vietnam_light"
      android:id="@+id/textView"
      android:layout_width="320dp"
      android:layout_height="120dp"
      android:layout_marginTop="80dp"
      android:text="Do you know that friend that knows everything about music? That's me!"
      android:textAlignment="center"
      android:textColor="#FFFFFF"
      android:textSize="70px"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.494"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView2" />

  <TextView
      android:fontFamily="@font/be_vietnam_light"
      android:id="@+id/textView2"
      android:layout_width="154dp"
      android:layout_height="86dp"
      android:layout_marginTop="48dp"
      android:text="Hello!"
      android:textAlignment="center"
      android:textColor="#FFFFFF"
      android:textSize="140px"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:fontFamily="@font/be_vietnam_light"
      android:id="@+id/textView3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="72dp"
      android:text="I'll use your Spotify account for that!"
      android:textAlignment="center"
      android:textColor="#FFFFFF"
      android:textSize="70px"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView" />

</androidx.constraintlayout.widget.ConstraintLayout>