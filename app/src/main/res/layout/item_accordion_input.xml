<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#638CEB"
    app:cardCornerRadius="10dp"
    android:orientation="vertical">
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:height="60dp"

        android:fontFamily="@font/be_vietnam_light"
        android:textColor="@android:color/white"
        android:layout_marginBottom="8dp"/>



    <LinearLayout
        android:id="@+id/detailsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="60dp"
        android:visibility="gone">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <HorizontalScrollView
            android:id="@+id/chip_group_rec_spotify_horrizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_rec_spotify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CustomRecChipStyle"
                app:singleLine="true">
            </com.google.android.material.chip.ChipGroup>
        </HorizontalScrollView>

        <EditText
            android:id="@+id/inputGenres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter a music genre"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/chip_group_rec_spotify_horrizontal"
            android:background="@android:color/transparent"
            android:padding="8dp"/>
        <EditText
            android:id="@+id/inputTracks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter a song"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/inputGenres"
            android:background="@android:color/transparent"
            android:padding="8dp"/>
        <EditText
            android:id="@+id/inputArtists"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter an artist"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/inputTracks"
            android:background="@android:color/transparent"
            android:padding="8dp"/>
    </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
