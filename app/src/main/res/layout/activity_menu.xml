<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="1"
    android:background="#858382"
    tools:context="activities.MenuActivity">

    <!-- Wood Background -->

    <!-- Vynil Image -->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/menuRV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="230dp"
        android:scrollbars="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintVertical_bias="0.932">

    </androidx.recyclerview.widget.RecyclerView>

    <androidx.cardview.widget.CardView
        android:id="@+id/vynil_profile"
        android:layout_width="330dp"
        android:layout_height="180dp"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:elevation="20dp"
        app:cardCornerRadius="20dp">

        <TextView
            android:layout_width="131dp"
            android:layout_height="85dp"
            android:layout_marginLeft="179dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/be_vietnam_light"
            android:text="Profile"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="34sp"
            android:textStyle="bold"></TextView>

        <ImageView
            android:id="@+id/wood_image"
            android:layout_width="330dp"
            android:layout_height="180dp"
            android:alpha="0.5"
            android:scaleType="centerCrop"
            android:src="@drawable/wood" />

        <ImageView
            android:id="@+id/vynil_image"
            android:layout_width="157dp"
            android:layout_height="164dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintHorizontal_bias="0.267"
            app:layout_constraintVertical_bias="0.094"
            app:srcCompat="@drawable/transparent_vynil" />

        <ImageView
            android:id="@+id/click_image"
            android:layout_width="79dp"
            android:layout_height="74dp"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="100dp"
            app:layout_constraintHorizontal_bias="0.267"
            app:layout_constraintVertical_bias="0.094"
            app:srcCompat="@drawable/arrow" />
    </androidx.cardview.widget.CardView>

    <ImageButton
        android:id="@+id/back_button_menu"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="#858382"
        android:src="@drawable/back"
        android:layout_marginTop="674dp"
        android:layout_marginLeft="20dp"/>


</FrameLayout>