<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="370dp"
    android:layout_height="350dp"
    android:layout_margin="1dp"
    android:textAlignment="center"
    app:cardBackgroundColor="#000000"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/recommendation_option_title_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/be_vietnam_light"
            android:text="VARIANTA X"
            android:padding="10dp"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="#F8F3F3"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/recommendation_option_description_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/be_vietnam_light"
            android:text="VARIANTA X"
            android:padding="10dp"
            android:layout_below="@+id/recommendation_option_title_text_view"
            android:layout_marginTop="20dp"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="#C6C0C0"
            android:textSize="16sp"
            android:textStyle="bold" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>