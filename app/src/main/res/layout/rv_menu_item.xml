<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="550dp"
    android:layout_margin="2dp"
    android:textAlignment="center"
    app:cardBackgroundColor="#000000"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/menu_option_title_text_view"
            android:layout_width="228dp"
            android:layout_height="149dp"
            android:layout_above="@+id/menu_option_description_text_view"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="21dp"
            android:fontFamily="@font/be_vietnam_light"
            android:text="VARIANTA X"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="#F8F3F3"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/menu_option_description_text_view"
            android:layout_width="216dp"
            android:layout_height="102dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="218dp"
            android:fontFamily="@font/be_vietnam_light"
            android:text="VARIANTA X"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="#C6C0C0"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/menu_option_image_view"
            android:layout_width="143dp"
            android:layout_height="158dp"
            android:layout_below="@id/menu_option_description_text_view"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="66dp"
            android:layout_marginTop="-190dp"
            android:layout_marginEnd="59dp"
            android:layout_marginBottom="32dp"
            android:src="@drawable/vynil" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>