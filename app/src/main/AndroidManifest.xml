<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.music_buddy_app2">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_music"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MusicBuddyApp2"
        tools:targetApi="31">
        <activity
            android:name=".ACTIVITIES.SeeSpotifyRecommendationsActivity"
            android:exported="false" />
        <activity
            android:name=".ACTIVITIES.ChooseArtistForSpotifyRecActivity"
            android:exported="false" />
        <activity
            android:name=".ACTIVITIES.ChooseTracksWithAudioFeaturesForSpotifyRecActivity"
            android:exported="false" />
        <activity
            android:name=".ACTIVITIES.FinalChangesForSpotifyRecommendationsActivity"
            android:exported="false" />
        <activity
            android:name=".ACTIVITIES.StartSpotifyRecommendationsActivity"
            android:exported="false" />
        <activity
            android:name=".ACTIVITIES.AnalysisActivity"
            android:exported="false" />
        <activity
            android:name=".ACTIVITIES.LeaderboardActivity"
            android:exported="false" />
        <activity
            android:name=".ACTIVITIES.SingleplayerGamesActivity"
            android:exported="false" />
        <activity
            android:name=".ACTIVITIES.MultiplayerGamesActivity"
            android:exported="false" />
        <activity
            android:name=".ACTIVITIES.BrowseRecommendationTypesActivity"
            android:exported="false" />
        <activity
            android:name=".ACTIVITIES.UsersTopItemsActivity"
            android:exported="false" />
        <activity
            android:name=".ACTIVITIES.ProfileActivity"
            android:exported="false" />

        <receiver
            android:name=".SERVICES.MyBroadcastReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.spotify.music.playbackstatechanged" />
                <action android:name="com.spotify.music.metadatachanged" />
                <action android:name="com.spotify.music.queuechanged" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".ACTIVITIES.WelcomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ACTIVITIES.MenuActivity"
            android:exported="true" />
        <activity
            android:name=".ACTIVITIES.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".ACTIVITIES.SpotifyAuthorizationActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="${redirectHostName}"
                    android:scheme="${redirectSchemeName}" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>